<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sidemenu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity2">

        <!-- 상단 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llTitle"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/box_white"
                android:elevation="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/baemin"
                    android:gravity="center"
                    android:text="냉장고를 부탁해"
                    android:textColor="@color/main_dark"
                    android:textSize="35dp"></TextView>

                <TextView
                    android:id="@+id/tvTitle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/didimgothic_b"
                    android:gravity="center"
                    android:text="유통기한 먼저 확인해주세요"
                    android:textColor="@color/warning"
                    android:textSize="15dp"></TextView>

            </LinearLayout>
            <Space
                android:layout_width="80dp"
                android:layout_height="40dp"></Space>
            <!-- MBTI 1번째 줄 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:paddingTop="15dp">



                <LinearLayout
                    android:id="@+id/llfood1"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="2.5"
                    android:background="@drawable/box_orange"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnfood1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/fruit"
                        android:fontFamily="@font/baemin"
                        android:layout_margin="20px"
                        android:gravity="center"
                        android:stateListAnimator="@null"
                        android:textColor="@color/main_dark"
                        android:textSize="20dp"></Button>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llfood2"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="2.5"
                    android:background="@drawable/box_orange"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnfood2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spice"
                        android:fontFamily="@font/baemin"
                        android:layout_margin="20px"
                        android:gravity="center"
                        android:stateListAnimator="@null"
                        android:textColor="@color/main_dark"
                        android:textSize="20dp"></Button>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llfood3"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="2.5"
                    android:background="@drawable/box_orange"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnfood3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/meat"
                        android:fontFamily="@font/baemin"
                        android:layout_margin="20px"
                        android:gravity="center"
                        android:stateListAnimator="@null"
                        android:textColor="@color/main_dark"
                        android:textSize="20dp"></Button>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llfood4"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="2.5"
                    android:background="@drawable/box_orange"
                    android:elevation="10dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnfood4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20px"
                        android:background="@drawable/seafood"
                        android:fontFamily="@font/baemin"
                        android:gravity="center"
                        android:stateListAnimator="@null"
                        android:textColor="@color/main_dark"
                        android:textSize="20dp"></Button>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.">

                <TextView
                    android:id="@+id/foodId1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:fontFamily="@font/baemin"
                    android:gravity="center"
                    android:text="과일 류"
                    android:textColor="@color/black"
                    android:textSize="15dp"></TextView>

                <TextView
                    android:id="@+id/foodId2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="56dp"
                    android:fontFamily="@font/baemin"
                    android:gravity="center"
                    android:text="채소 류"
                    android:textColor="@color/black"
                    android:textSize="15dp"></TextView>

                <TextView
                    android:id="@+id/foodId3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="60dp"
                    android:fontFamily="@font/baemin"
                    android:gravity="center"
                    android:text="고기 류"
                    android:textColor="@color/black"
                    android:textSize="15dp"></TextView>

                <TextView
                    android:id="@+id/foodId4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="56dp"
                    android:fontFamily="@font/baemin"
                    android:gravity="center"
                    android:text="해산물 류"
                    android:textColor="@color/black"
                    android:textSize="15dp"></TextView>
            </LinearLayout>
            <!-- MBTI 2번째 줄 -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp"></Space>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <LinearLayout
                    android:id="@+id/llfood5"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="2.5"
                    android:background="@drawable/box_orange"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnfood5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20px"
                        android:background="@drawable/dairyproduct"
                        android:fontFamily="@font/baemin"
                        android:gravity="center"
                        android:stateListAnimator="@null"
                        android:textColor="@color/main_dark"
                        android:textSize="20dp"></Button>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llfood6"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="2.5"
                    android:background="@drawable/box_orange"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnfood6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20px"
                        android:background="@drawable/bread"
                        android:fontFamily="@font/baemin"
                        android:gravity="center"
                        android:stateListAnimator="@null"
                        android:textColor="@color/main_dark"
                        android:textSize="20dp"></Button>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llfood7"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="2.5"
                    android:background="@drawable/box_orange"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnfood7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20px"
                        android:background="@drawable/chichken"
                        android:fontFamily="@font/baemin"
                        android:gravity="center"
                        android:stateListAnimator="@null"
                        android:textColor="@color/main_dark"
                        android:textSize="20dp"></Button>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llfood8"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="2.5"
                    android:background="@drawable/box_orange"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnfood8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20px"
                        android:background="@drawable/seasoning"
                        android:fontFamily="@font/baemin"
                        android:gravity="center"
                        android:stateListAnimator="@null"
                        android:textColor="@color/main_dark"
                        android:textSize="20dp"></Button>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.">
                <TextView
                    android:id="@+id/foodId5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="발효식품"
                    android:fontFamily="@font/baemin"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="35dp"
                    android:textColor="@color/black"></TextView>
                <TextView
                    android:id="@+id/foodId6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="빵 류"
                    android:fontFamily="@font/baemin"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="56dp"
                    android:gravity="center"
                    android:textColor="@color/black"></TextView>
                <TextView
                    android:id="@+id/foodId7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닭 가슴살"
                    android:fontFamily="@font/baemin"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="65dp"
                    android:gravity="center"
                    android:textColor="@color/black"></TextView>
                <TextView
                    android:id="@+id/foodId8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기타용품"
                    android:fontFamily="@font/baemin"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="45dp"
                    android:gravity="center"
                    android:textColor="@color/black"></TextView>
            </LinearLayout>
            <!-- MBTI 3번째 줄 -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"></Space>
            <!-- MBTI 4번째 줄 -->
    <!--        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">-->

                <LinearLayout
                    android:id="@+id/llAbout"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:elevation="10dp"
                    android:gravity="center"

                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnAbout"
                        android:layout_width="150dp"
                        android:layout_height="75dp"
                        android:background="@drawable/box_white"
                        android:fontFamily="@font/baemin"
                        android:gravity="center"
                        android:stateListAnimator="@null"
                        android:text="요리에 대하여"
                        android:textColor="@color/main_dark"
                        android:textSize="20dp"></Button>
                    <Space
                        android:layout_width="80dp"
                        android:layout_height="15dp"></Space>
                    <Button
                        android:id="@+id/btnAbout2"
                        android:layout_width="160dp"
                        android:layout_height="75dp"
                        android:background="@drawable/box_white"
                        android:fontFamily="@font/baemin"
                        android:gravity="center"
                        android:stateListAnimator="@null"
                        android:text="식비 통계"
                        android:textColor="@color/main_dark"
                        android:textSize="20dp"></Button>

<!--                </LinearLayout>-->

                </LinearLayout>
            <me.relex.circleindicator.CircleIndicator3
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/yellow"
                android:visibility="invisible" />

        </LinearLayout>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="130dp" />


    </LinearLayout>

    <include layout="@layout/activity_sidemenu"></include>

</androidx.drawerlayout.widget.DrawerLayout>

